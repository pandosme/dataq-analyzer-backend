{
  "name": "dataq-analyzer-backend",
  "version": "1.0.0",
  "description": "Backend + Admin UI for DataQ Analyzer - MQTT-based analyzer for Axis DataQ camera path and flow data",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev:admin": "cd admin-ui && npm run dev",
    "start": "node src/server.js",
    "build:admin": "cd admin-ui && npm install && npm run build && cd .. && mkdir -p dist/admin && cp -r admin-ui/dist/* dist/admin/",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mqtt",
    "axis",
    "dataq",
    "camera",
    "analytics",
    "heatmap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "digest-fetch": "^3.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "mqtt": "^5.3.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
